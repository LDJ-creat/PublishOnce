# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/publishonce

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Redis配置 (用于Bull队列)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 平台配置
# CSDN
CSDN_USERNAME=
CSDN_PASSWORD=

# 掘金
JUEJIN_USERNAME=
JUEJIN_PASSWORD=

# 华为开发者社区
HUAWEI_USERNAME=
HUAWEI_PASSWORD=

# Hexo博客
HEXO_DEPLOY_PATH=
HEXO_GITHUB_TOKEN=

# 邮件配置
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 任务调度器配置
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Shanghai

# 定时任务配置
DAILY_SCRAPE_CRON=0 2 * * *
HOT_ARTICLES_CRON=0 */4 * * *
WEEKLY_CLEANUP_CRON=0 3 * * 0
USER_SCRAPE_CRON=0 */6 * * *

# 通知系统配置
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_WEBHOOK_ENABLED=false
NOTIFICATION_WEBHOOK_URL=

# 抓取配置
SCRAPE_MAX_ARTICLES=100
SCRAPE_TIMEOUT=30000
SCRAPE_RETRY_ATTEMPTS=3
SCRAPE_RETRY_DELAY=5000

# 发布配置
PUBLISH_TIMEOUT=60000
PUBLISH_RETRY_ATTEMPTS=2
PUBLISH_RETRY_DELAY=10000
PUBLISH_CONCURRENT_LIMIT=3